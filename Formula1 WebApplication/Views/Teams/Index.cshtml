@model IEnumerable<Team>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
    <table class="table table-responsive-lg table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YearOfFoundation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AttainedWorldChampionships)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaidEntryFee)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YearOfFoundation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AttainedWorldChampionships)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaidEntryFee)
                    </td>
                    <td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        }

                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
